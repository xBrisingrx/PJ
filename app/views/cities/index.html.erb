<h1>Ciudades</h1>
<%= link_to "<i class='fa fa-plus'></i> Registrar provincia".html_safe, new_city_path(), remote: true, class: 'btn u-btn-outline-primary u-btn-hover-v1-2 mb-2' %>

<%= render( partial: 'shared/table', 
            locals: { table_id: 'cities', 
                      color: 'blue', 
                      icon: 'fa-gear',
                      title: "Ciudades registradas", 
                      col_names: [ 'Provincia','Ciudad', 'DescripciÃ³n', 'Acciones' ] }) %>

<!-- Modal para eliminar city -->
<div class="modal fade" id="modal-disable-city" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Â¿ Esta seguro de dar de baja esta ciudad ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with(url: disable_city_path, id: 'form-disable-city') do |form| %>
          <%= form.hidden_field :city_id %>
          <%= form.submit 'Eliminar', class: 'btn u-btn-red g-mr-10' %>
          <button type="button" data-dismiss="modal" class="btn u-btn-teal g-mr-10"> Cerrar </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- Fin modal eliminar city -->
